@model List<ItemModel>

@{
    ViewData["Title"] = "Listings";
}

<h2>Listings</h2>

@foreach (var item in @Model)
{
<div class="item-card">
    <h2>@item.Id</h2>
    <h2>@item.Name</h2>
    <h2>@item.Description</h2>
    <h2>@item.Price</h2>
    <h2>@item.Category.Name</h2>
    
    @foreach (var picture in @item.Pictures)
    {
    <img src="@picture.Url" alt="Item Picture" width="100" height="100" />
    }
</div>
}

<style>
    body {
        background-color: #e5e5e5;
    }

    .item-card {
        padding: 20px;
        background-color: white;
        border-radius: 3px;
        max-width: 400px;
        margin: 20px 0;
    }
</style>